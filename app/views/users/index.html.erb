<p id="notice"><%= notice %></p>

<h1>Korisnici </h1>

<table class="table">
  <thead>
    <tr>
      <th>Korisničko ime</th>
      <th>Šifra</th>
      <th>Ime</th>
      <th>Prezime</th>
      <th>Datum rođenja</th>
      <th>Adresa</th>
      <th>Mjesto rođenja</th>
      <th>Rola</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.birthDate %></td>
        <td><%= user.address %></td>
        <td><%= user.birthplace %></td>
        <td><%= user.role_id %></td>
        <td><%= link_to 'Prikaži', user , class:'btn btn-primary btn-sm', style: 'color: white'%></td>
        <td><%= link_to 'Uredi', edit_user_path(user) , class: 'btn btn-primary btn-sm', style: 'color: white' %></td>
        <td><%= link_to 'Izbriši', user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm', style: 'color: white'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novi korisnik', new_user_path , class:'btn btn-primary btn-md', style: 'color: white'%>
