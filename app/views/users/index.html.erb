<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Birthdate</th>
      <th>Address</th>
      <th>Birthplace</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.birthDate %></td>
        <td><%= user.address %></td>
        <td><%= user.birthplace %></td>
        <td><%= user.role_id %></td>
        <td><%= link_to 'Show', user , class:'btn btn-primary btn-sm', style: 'color: white'%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class: 'btn btn-primary btn-sm', style: 'color: white' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm', style: 'color: white'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , class:'btn btn-primary btn-md', style: 'color: white'%>
