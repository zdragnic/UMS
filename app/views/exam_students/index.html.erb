<p id="notice"><%= notice %></p>

<h1>Prijavljeni ispiti</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ispit</th>
      <th>Student</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exam_students.each do |exam_student| %>
      <tr>
        <td><%= exam_student.exam_id %></td>
        <td><%= exam_student.user_id %></td>
        <td><%= exam_student.status %></td>
        <td><%= link_to 'Prikaži', exam_student %></td>
        <td><%= link_to 'Uredi', edit_exam_student_path(exam_student) %></td>
        <td><%= link_to 'Izbriši', exam_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Prijavi novi ispit', new_exam_student_path %>
