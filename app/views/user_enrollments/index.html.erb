<p id="notice"><%= notice %></p>

<h1>User Enrollments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Study year</th>
      <th>User</th>
      <th>Course department</th>
      <th>Lab group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_enrollments.each do |user_enrollment| %>
      <tr>
        <td><%= user_enrollment.study_year_id %></td>
        <td><%= user_enrollment.user_id %></td>
        <td><%= user_enrollment.course_department_id %></td>
        <td><%= user_enrollment.lab_group_id %></td>
        <td><%= link_to 'Show', user_enrollment, class: 'btn btn-primary', style: 'color:white' %></td>
        <td><%= link_to 'Edit', edit_user_enrollment_path(user_enrollment),class: 'btn btn-primary' ,style: 'color:white'%></td>
        <td><%= link_to 'Destroy', user_enrollment, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger',style: 'color:white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Enrollment', new_user_enrollment_path, class:'btn btn-primary',style: 'color:white'%>
