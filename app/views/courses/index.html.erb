<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= @current_user ||= User.find_by(id: session[:user_id]) if session[:user_id] %>
 <%= @courses = Course.where("responsible=?",session[:user_id]) %>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.code %></td>
        <td><%= course.user_id %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>


