<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
  <tr>
    <th>Naziv kursa</th>
    <th>Å ifra kursa</th>
    <th>Odgovorni profesor</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>

  <%= @current_user ||= User.find_by(id: session[:user_id]) if session[:user_id] %>
  <% if @current_user.role_id.equal?(1) %>

      <%= @courses = Course.where("user_id=?",session[:user_id]) %>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.code %></td>
            <td><%= @current_user.name %></td>


          </tr>
      <% end %>
      </tbody>
      </table>

      <br>

  <%end %>

  <% if @current_user.role_id.equal?(4) %>
      <%= @current_user ||= User.find_by(id: session[:user_id]) if session[:user_id] %>
      <%= @courses = Course.where("responsible=?",session[:user_id]) %>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.code %></td>
            <td><%= @current_user.name %></td>


          </tr>
      <% end %>
      </tbody>
      </table>

      <br>
  <% end %>