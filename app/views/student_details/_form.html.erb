<br>
<div class="panel panel-info">
  <div class="panel-heading">
        <h3 class="panel-title"><%= 'Dodaj detalje o novom studentu' %></h3>
  </div>
  <div class="panel-body">
 <%= form_with(model: student_detail, local: true) do |form| %>
  <% if student_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "greška") %> prohibited this user from being saved:</h2>

      <ul>
      <% student_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
            </div>
    <% end %>
 <div class="form-group">

   <div class="field">
      <%= form.label :'Student:' %>
      <%= form.text_field :user_id, id: :student_detail_user_id %>
   </div>

    <div class="field">
      <%= form.label :'Broj indeksa:' %>
      <%= form.text_field :indeks, id: :student_detail_indeks %>
    </div>

    <div class="field">
      <%= form.label :'Budžet:' %>
      <%= form.text_field :budget, id: :student_detail_budget %>
    </div>

    <div class="field">
      <%= form.label :'Datum upisa:' %>
      <%= form.date_field :enrollmentDate, id: :student_detail_enrollmentDate %>
    </div>

    <div class="field">
      <%= form.label :'Datum ispisa:' %>
      <%= form.date_field :disrollmentDate, id: :student_detail_disrollmentDate %>
    </div>

    <div class="field">
      <%= form.label :'Datum diplomiranja:' %>
      <%= form.date_field :graduationDate, id: :student_detail_graduationDate %>
    </div>


    <div class="actions">
      <%= form.submit 'Sačuvaj', class:'btn btn-primary' %>
    </div>
</div>
<% end %>
  </div>
</div>