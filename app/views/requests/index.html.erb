<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th>Status</th>
      <th>User</th>
      <th>Credential</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <span style="visibility: hidden"><%= @current = User.find(request.user_id)%></span>
      <% if StudentZahtjevi(session[:user_id], request.id)%>

      <tr>

        <td><%= status(request.id) %></td>

        <td><%= request.user_id %></td>
        <td><%= request.credential_id %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <% if !rola?(session[:user_id])%>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
      </tr>

        <%end%>
  <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
